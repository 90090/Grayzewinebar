---
import '../styles/global.css';

interface Props {
  title: string;
  currentPath?: string;
  description?: string;
}

const { title, currentPath = '/',description='Grayze Wine Bar is a premier wine bar in the heart of downtown Southington, featuring an extensive selection of wines from around the world.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/webp" sizes="192x192" href="public/circle-logo-gold.webp" />
    <link rel="shortcut icon" type="image/webp" href="public/circle-logo-gold.webp" />
    <link rel="apple-touch-icon" href="public/circle-logo-gold.webp" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,700;1,400;1,700&family=Open+Sans:wght@400;700&display=swap" 
      rel="stylesheet" 
    />
  </head>
  <body class="font-serif text-white bg-wine-black">
    <slot />
  </body>
</html>