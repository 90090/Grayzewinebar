---
import '../styles/global.css';

interface Props {
  title: string;
  currentPath?: string;
}

const { title, currentPath = '/' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="font-serif text-white bg-wine-black">
    <slot />
  </body>
</html>