---

<Layout title="Menu - Grayze Wine Bar" currentPath="/menu">
  <Navigation currentPath="/menu" />

  <!-- Hero -->
  <section class="relative flex flex-col items-center justify-center overflow-hidden h-[50vh] sm:h-[55vh] md:h-[60vh] bg-gradient-to-br from-wine-green to-wine-black px-6 text-center">
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: repeating-linear-gradient(90deg,transparent,transparent 50px,rgba(212,175,55,1) 50px,rgba(212,175,55,1) 51px);"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent,rgba(10,10,10,0.5))]"></div>
    <h1 class="relative z-[2] text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-light uppercase text-wine-gold tracking-[4px] sm:tracking-[6px] md:tracking-[8px] mb-3 text-shadow-gold">Our Selection</h1>
    <p class="relative z-[2] text-base sm:text-lg md:text-2xl text-white italic tracking-[2px] max-w-[28rem] sm:max-w-none">Curated wines, craft cocktails & small plates</p>
    <div class="relative z-[2] w-[160px] h-0.5 bg-gradient-to-r from-transparent via-wine-gold to-transparent mt-7"></div>
  </section>

  <!-- PDF Download Bar -->
  <div class="bg-wine-green border-y border-wine-gold/30 py-4 px-4">
    <div class="max-w-[1400px] mx-auto flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-6 text-center">
      <span class="text-wine-gold/60 text-xs tracking-[3px] uppercase hidden sm:block">View Full Menu</span>
      <div class="flex flex-wrap justify-center gap-3">
        {[
          { label: "Menu",   href: "/menus/Grayze_Menu.pdf"  },
        ].map(({ label, href }) => (
          <a href={href} target="_blank"
            class="flex items-center gap-2 px-4 py-2 border border-wine-gold/40 rounded text-wine-gold text-xs sm:text-sm tracking-wider hover:bg-wine-gold hover:text-wine-black transition-all duration-200">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-4 h-4 flex-shrink-0">
              <path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="12" y1="18" x2="12" y2="12"/>
              <polyline points="9 15 12 18 15 15"/>
            </svg>
            {label}
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- All Menu Content -->
  <section class="py-16 md:py-20 px-4 sm:px-8 bg-gradient-to-b from-wine-black via-wine-gray to-wine-black">
    <div class="max-w-[1400px] mx-auto space-y-24">

      <!-- Section heading helper rendered inline each time -->

      <!-- ── STARTERS ── -->
      <div>
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl text-wine-gold tracking-[4px] font-light uppercase mb-4 relative inline-block category-title">Starters</h2>
          <div class="relative w-[150px] h-0.5 bg-wine-gold mx-auto mt-4">
            <div class="absolute top-1/2 -translate-y-1/2 -left-4 w-1.5 h-1.5 bg-wine-green rounded-full"></div>
            <div class="absolute top-1/2 -translate-y-1/2 -right-4 w-1.5 h-1.5 bg-wine-green rounded-full"></div>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 md:gap-7">
          {starters.map((item) => (
            <div class="food-card bg-gradient-to-br from-wine-green/30 to-wine-gray/30 p-6 rounded-lg border border-wine-gold/30">
