                <tr class={`wine-row border-b border-wine-gold/10 ${i % 2 === 0 ? 'bg-wine-black/40' : 'bg-wine-green/10'}`}>
                  <td class="px-5 py-4 text-wine-gold font-medium tracking-wide">{w.wine}</td>
                  <td class="px-5 py-4 text-white/70">{w.producer}</td>
                  <td class="px-5 py-4 text-white/50 italic text-xs">{w.region}</td>
                  <td class="px-5 py-4 text-white/75 max-w-xs">{w.notes}</td>
                  <td class="px-5 py-4 text-wine-light-gold text-right">{w.glass !== "—" ? `$${w.glass}` : "—"}</td>
