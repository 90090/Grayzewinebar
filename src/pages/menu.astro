<script>
  const obs = new IntersectionObserver((entries) => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('opacity-100', 'translate-y-0');
      }
    });
  }, { threshold: 0.08, rootMargin: '0px 0px -40px 0px' });

  document.querySelectorAll('.wine-card, .food-card').forEach((el, i) => {
    const e = el as HTMLElement;
    e.classList.add('opacity-0', 'translate-y-4', 'transition-all', 'duration-400');
    e.style.transitionDelay = `${i * 50}ms`;
    obs.observe(e);
  });

  document.querySelectorAll('.category-title').forEach(el => {
    el.classList.add('opacity-0', 'translate-y-5', 'transition-all', 'duration-700');
    obs.observe(el);
  });

  document.querySelectorAll('.wine-row').forEach((el, i) => {
    const e = el as HTMLElement;
    e.classList.add('opacity-0', 'transition-opacity', 'duration-300');
    e.style.transitionDelay = `${i * 35}ms`;
    obs.observe(e);
  });
</script>

