            <div class="absolute top-1/2 -translate-y-1/2 -right-4 w-1.5 h-1.5 bg-wine-green rounded-full"></div>
          </div>
        </div>
        <!-- Mobile cards / Desktop table -->
        <div class="block md:hidden space-y-4">
          {sparkling.map((w) => (
            <div class="wine-card bg-gradient-to-br from-wine-green/30 to-wine-gray/30 p-5 rounded-lg border border-wine-gold/30">
              <div class="flex justify-between items-start mb-1">
                <div>
                  <span class="text-wine-gold font-semibold tracking-wide">{w.wine}</span>
                  <span class="text-white/50 text-sm ml-2">· {w.producer}</span>
                </div>
                <div class="text-right flex-shrink-0 ml-3">
                  {w.glass !== "—" && <div class="text-wine-light-gold text-sm">Glass <span class="font-bold">${w.glass}</span></div>}
                  <div class="text-wine-light-gold text-sm">Bottle <span class="font-bold">${w.bottle}</span></div>
